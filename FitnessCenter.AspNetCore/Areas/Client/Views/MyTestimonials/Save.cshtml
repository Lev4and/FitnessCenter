@model Testimonial
@section StylePage
{
    <link rel="stylesheet" href="~/css/adminpanel/custom.css" />
}
@{
    ViewData["Title"] = "Сохранение отзыва";
}
<div class="page-wrapper">
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-breadcrumb d-none d-md-flex align-items-center mb-3">
                <div class="breadcrumb-title pr-3">Отзывы</div>
                <div class="pl-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item">
                                <a href="javascript:;"><i class='bx bx-home-alt'></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Мои отзывы</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="card radius-15">
                <div class="card-body">
                    <div class="card-title">
                        <h4 class="mb-0">Форма</h4>
                    </div>
                    <hr />
                    <div class="form-body">
                        <form method="post" action="/Client/MyTestimonials/Save">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="ClientId" />
                            <input type="hidden" asp-for="WrittenAt" />
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Сообщение</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="Message" min="1" required>
                                    <span class="invalid-feedback" asp-validation-for="Message"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input type="submit" class="btn btn-light px-4" value="Сохранить" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>