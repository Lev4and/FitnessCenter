@model ClientViewModel
@section StylePage
{
    <link rel="stylesheet" href="~/css/adminpanel/custom.css" />
}
@{
    ViewData["Title"] = "Сохранение аккаунта";
    ViewData["PasswordPattern"] = "pattern=\"^.*(?=.{5,})(?=.*\\d)(?=.*[!#№$%^&*])(?=.*[a-z])(?=.*[A-Z]).*$\"";
}
<div class="page-wrapper">
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-breadcrumb d-none d-md-flex align-items-center mb-3">
                <div class="breadcrumb-title pr-3">Личные данные</div>
                <div class="pl-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item">
                                <a href="javascript:;"><i class='bx bx-home-alt'></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Аккаунт</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="card radius-15">
                <div class="card-body">
                    <div class="card-title">
                        <h4 class="mb-0">Форма</h4>
                    </div>
                    <hr />
                    <div class="form-body">
                        <form method="post" action="/Client/Account/Save">
                            <input type="hidden" asp-for="Client.Id" />
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Логин</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="Client.UserName" min="1" required>
                                    <span class="invalid-feedback" style="display: block;" asp-validation-for="Client.UserName"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Пароль</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" @(string.IsNullOrEmpty(Model.Client.PasswordHash) ? ViewData["PasswordPattern"] : "") asp-for="CurrentPassword" required>
                                    <span class="invalid-feedback" style="display: block;" asp-validation-for="CurrentPassword"></span>
                                </div>
                                <label class="col-form-label" style="display: block;">Пароль должен иметь длину не менее 5 символов и содержать: цифры, буквы, строчные буквы и специальные символы (!#№$%^&*)</label>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Client.PasswordHash))
                            {
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Новый пароль</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" @ViewData["PasswordPattern"] asp-for="NewPassword" required>
                                        <span class="invalid-feedback" style="display: block;" asp-validation-for="NewPassword"></span>
                                    </div>
                                    <label class="col-form-label" style="display: block;">Пароль должен иметь длину не менее 5 символов и содержать: цифры, буквы, строчные буквы и специальные символы (!#№$%^&*)</label>
                                </div>
                            }
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Электронная почта</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="Client.Email" min="1" required>
                                    <span class="invalid-feedback" style="display: block;" asp-validation-for="Client.Email"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Номер телефона</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="Client.PhoneNumber" min="1" required>
                                    <span class="invalid-feedback" style="display: block;" asp-validation-for="Client.PhoneNumber"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input type="submit" class="btn btn-light px-4" value="Сохранить" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>