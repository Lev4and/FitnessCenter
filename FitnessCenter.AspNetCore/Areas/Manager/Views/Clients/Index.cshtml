@model ClientsViewModel
@section StylePage
{
    <link rel="stylesheet" type="text/css" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/plugins/datatable/css/dataTables.bootstrap4.min.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/plugins/datatable/css/buttons.bootstrap4.min.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/css/adminpanel/custom.css" asp-append-version="true" />
}
@{
    ViewData["Title"] = "Клиенты";
}
<div class="page-wrapper">
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-breadcrumb d-none d-md-flex align-items-center mb-3">
                <div class="breadcrumb-title pr-3">База клиентов</div>
                <div class="pl-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item">
                                <a href="javascript:;"><i class='bx bx-home-alt'></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Клиенты</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4 class="mb-0">Клиенты</h4>
                    </div>
                    <hr />
                    <div class="table-responsive">
                        <table id="table-clients" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Фото клиента</th>
                                    <th>ФИО</th>
                                    <th>Пол</th>
                                    <th>Возраст</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var client in Model.Clients)
                                {
                                    <tr>
                                        <td>
                                            <div class="container-image">
                                                <img src="~/@client.Photo" />
                                            </div>
                                        </td>
                                        <td>@($"{client.LastName} {client.FirstName} {client.MiddleName}")</td>
                                        <td>@client.Gender.Name</td>
                                        <td>@client.GetAge()</td>
                                        <td>
                                            <div class="btn-group pull-right">
                                                <a asp-area="Manager" asp-controller="Clients" asp-action="Info" asp-route-id="@client.Id">
                                                    <button class="btn btn-sm btn-default">
                                                        <span class="fa fa-info">

                                                        </span>
                                                    </button>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Фото клиента</th>
                                    <th>ФИО</th>
                                    <th>Пол</th>
                                    <th>Возраст</th>
                                    <th>Действия</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section ScriptPage {
    <script src="~/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#table-clients').DataTable();
        });
    </script>
}